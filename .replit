modules = ["nodejs-20", "python-3.12", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Python-Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ODIN-Frontend"

[[workflows.workflow]]
name = "Python-Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd OdinOptimal/python_backend && pip install -r requirements.txt && PORT=3001 python app.py"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "ODIN-Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd OdinOptimal && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45627
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["cd", "OdinOptimal", "&&", "npm", "start"]
build = ["cd", "OdinOptimal", "&&", "npm", "run", "build"]
